---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="LexAI - AI Law & Ethics Intelligence">
  <main>
    <div class="hero">
      <h1>Tracking Global <span class="text-gradient">AI Law & Ethics</span></h1>
      <p class="subtitle">
        Your comprehensive source for AI law, ethics, and regulatory developments across the US, EU, and China.
      </p>
    </div>
    
    <h2 class="section-title">Key Coverage Areas</h2>
    <p class="section-description">
      Stay informed about critical legal, ethical, and regulatory developments.
    </p>
    
    <ul role="list" class="link-card-grid">
      <Card
        href="/updates?category=legislation"
        title="Legislative Updates"
        body="Track new laws, regulations, and policy frameworks affecting AI and emerging technologies."
      />
      <Card
        href="/updates?category=court"
        title="Legal Precedents"
        body="Follow court decisions and legal interpretations shaping the future of AI regulation."
      />
      <Card
        href="/updates?category=compliance"
        title="Compliance Guidelines"
        body="Access detailed compliance requirements and implementation standards."
      />
      <Card
        href="/analysis"
        title="Expert Analysis"
        body="Get in-depth analysis of regulatory impacts from legal and technical experts."
      />
    </ul>
  </main>
</Layout>

<style>
  main {
    margin: 6rem auto 0;
    padding: 1rem;
    width: 1200px;
    max-width: calc(100% - 2rem);
    color: var(--text);
    font-size: 18px;
    line-height: 1.6;
  }
  
  .hero {
    text-align: center;
    padding: 4rem 0;
    max-width: 800px;
    margin: 0 auto;
  }
  
  h1 {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1;
    margin: 0 0 1rem;
  }
  
  .subtitle {
    font-size: 1.25rem;
    color: #64748b;
    margin: 0;
  }
  
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  
  .section-title {
    font-size: 2rem;
    font-weight: 700;
    margin: 4rem 0 0.5rem;
    text-align: center;
  }
  
  .section-description {
    text-align: center;
    color: #64748b;
    margin-bottom: 3rem;
  }
  
  .link-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    gap: 2rem;
    padding: 0;
  }
</style>